  <script>
    // Jaar updaten
    document.getElementById('year').textContent = new Date().getFullYear();

    // Mobiel menu
    const hamb = document.querySelector('.hamb');
    const drawer = document.getElementById('drawer');
    const closeBtn = document.getElementById('closeDrawer');
    hamb.addEventListener('click', () => {
      drawer.classList.add('open');
      drawer.hidden = false;
      hamb.setAttribute('aria-expanded','true');
    });
    closeBtn.addEventListener('click', () => {
      drawer.classList.remove('open');
      drawer.hidden = true;
      hamb.setAttribute('aria-expanded','false');
    });
    drawer.addEventListener('click', (e)=>{ if(e.target === drawer){ closeBtn.click(); }});
  </script>
<script>
    // Plan drawer (WhatsApp)
    const planDrawer = document.getElementById('planDrawer');
    const closePlan = document.getElementById('closePlanDrawer');
    const planNameEl = document.getElementById('planName');
    const waBtn = document.getElementById('waBtn');
    function openPlan(plan){
      planNameEl.textContent = plan;
      const msg = 'Hallo! Ik wil starten met het ' + plan + ' online trainingschema.';
      waBtn.href = 'https://wa.me/32494271445?text=' + encodeURIComponent(msg);
      planDrawer.classList.add('open');
      planDrawer.hidden = false;
    }
    document.querySelectorAll('.plan-cta').forEach(btn => {
      btn.addEventListener('click', () => openPlan(btn.dataset.plan));
    });
    closePlan.addEventListener('click', () => {
      planDrawer.classList.remove('open');
      planDrawer.hidden = true;
    });
    planDrawer && planDrawer.addEventListener('click', (e) => { if(e.target === planDrawer){ closePlan.click(); } });
  </script>
